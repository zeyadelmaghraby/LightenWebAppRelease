@page
@model LogoutPageModel
@{
    ViewData["Title"] = "Logout Page";
}

<!DOCTYPE html>
<html lang="en">
   <!-- body -->
   <body class="main-layout">
      <div class="brand_color">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="titlepage">
                        <h2>Logout Page</h2>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- registration -->
    <div class="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">                    
                    <form class="main_form" asp-area="Identity" asp-page="/Logout" method="post">
                        <div class="row">
                            <div class=" col-md-12">
                                <input type="submit" value="Logout" class="send" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- end contact --> 
   </body>
</html>